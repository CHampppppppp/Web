---
import { Image } from "astro:assets";
import aboutImg from "@/assets/about-astro.png";
import PageLayout from "@/layouts/Base.astro";

const meta = {
	description: "...你知道你的路在哪里吗？",
	title: "走丢啦！",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-6">404 | 走丢啦！</h1>
	<p class="mb-8">...你知道自己的路在哪里吗？</p>
	<div class="my-4 grid justify-center">
		<Image
			alt="A cartoon cactus looking at the 'Astro.build' logo"
			class="rotate-180"
			loading="eager"
			src={aboutImg}
		/>
	</div>
</PageLayout>
